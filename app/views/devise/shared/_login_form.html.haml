.modal#modal-login{ area: { hidden: :true, labelledby: "exampleModalLabel" }, role: :dialog, tabindex: "-1" }
  /-- Modal --
  .modal-dialog{ role: :dialog }
    .modal-content
      .col-12#name-login
        = form_for(resource, as: resource_name, url: login_path) do |f|
          .demo-alert.alert-danger
            %p
              デモアカウントでもログインできます。
              %br
              <b>testuser</b> / <b>foobar</b>
          .form-group
            = f.text_field :account_name, autocomplete: "account_name", class: "form-control item", placeholder: "アカウント名"
          .form-group
            = f.password_field :password, class: "form-control item", placeholder: "Password", autocomplete: "current-password"
          .forgetPassword
            = link_to "パスワードを忘れた人はこちら", passwords_new_path
          .form-group
            = f.submit "ログイン", class: "btn btn-block btn-blue"
            .checkbox
              = f.check_box :remember_me
              = f.label :remember_me
      .col-12#sns-login
        .social-media.text-center
          %h5 SNSログインはこちら
          %ul.social-network.social-circle
            %li
              = link_to user_facebook_omniauth_authorize_path, class: "iconFacebook", title: "Facebook" do
                <i class="fab fa-facebook-f"></i>
            %li
              = link_to user_twitter_omniauth_authorize_path, class: "iconTwitter", title: "Twitter" do
                <i class="fab fa-twitter"></i>
