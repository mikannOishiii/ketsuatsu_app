<% provide(:title, "ログイン") %>
<% provide(:h1, "ログイン") %>
<%= render "devise/shared/signup_menu" %>
<div class="col-md-12">
  <%= form_for(resource, as: resource_name, url: login_path) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="demo-alert alert-danger">
      <p>【採用担当者の方へ】デモアカウントでもログインできます。<br><b>testuser</b> / <b>foobar</b></p>
    </div>
    <div class="form-group row">
      <%= f.label :account_name, class: "col-4 col-form-label" %>
      <div class="col-8">
        <%= f.text_field :account_name, autocomplete: "account_name", class: "form-control item" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :password, class: "col-4 col-form-label" %>
      <div class="col-8">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control item" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-4 col-form-label">
      </div>
      <div class="col-8">
        <div class="checkbox">
          <%= f.check_box :remember_me %> <%= f.label :remember_me %>
          <%= link_to "パスワードを忘れた人はこちら", passwords_new_path %>
        </div>
      </div>
    </div>
    <%= f.submit "ログイン", class: "btn btn-block create-account" %>
  <% end %>
</div>
<%= render 'devise/shared/account_footer' %>
