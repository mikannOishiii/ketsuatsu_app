<% provide(:title, "血圧予防コラム") %>
<% provide(:h1, "血圧予防コラム") %>
<!-- ======= Read/Unread Section ======= -->
<section id="read-section">
  <div class='container registration-form'>
    <div class="row">
		  <div class="col-md-3 ">
        <div class="list-group ">
          <%= link_to "コラム一覧", articles_path, class: "list-group-item list-group-item-action  #{'active' if current_page?(articles_path)}" %>
        </div>
      </div>
      <div class="col-md-9">
		    <div class="card">
		      <div class="card-body">
            <div class="terms_inner">
              <h1 class="terms_title"><%= yield(:h1) %></h1>
            </div>
	          <div class="row">
              <div class="col-md-12 unread_articles">
                <h2>未読の記事</h2>
                <% if @unread_articles.present? %>
                  <ul>
                    <% @unread_articles.each do |article| %>
                      <li>
                        <%= link_to article.title, article_path(article.id) %>
                      </li>
                    <% end %>
                  </ul>
                <% else %>
                  <ul>
                    <li>未読の記事はありません。</li>
                  </ul>
                <% end %>
              </div>
              <div class="col-md-12 read_articles">
                <h2>既読の記事</h2>
                <ul>
                  <% @read_articles.each do |article| %>
                  <li>
                    <%= link_to article.title, article_path(article.id) %>
                  </li>
                  <% end %>
                </ul>
              </div>
            </div>

              <%= render 'devise/shared/account_footer' %>
